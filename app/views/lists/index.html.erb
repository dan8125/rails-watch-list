<div class="container mt-5">
  <h1 class="mb-4">Movie Lists</h1>
  <div>
    <% @lists.each do |list| %>
      <div class="card mb-3 shadow-sm">
        <div class="card-body">
          <h2 class="card-title">
            <%= link_to list.name, list_path(list), class: "text-decoration-none" %>
          </h2>
        </div>
      </div>
    <% end %>
  </div>
  <div>
  <p><%= link_to '+ Add a new list', new_list_path, class: 'btn btn-primary mt-3' %></p>
  </div>
</div>
