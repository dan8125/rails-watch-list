<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1562329265-95a6d7a83440?q=80&w=1070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>

<div class="container mt-5">
  <h1 class="mb-4">Movie Lists</h1>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('https://ducunl0s4svtl.cloudfront.net/wp-content/uploads/2017/10/flat-clapperboard-icon_1063-38.jpg') %>)">
          <h2 class="card-title">
            <%= link_to list.name, list_path(list), class: "text-decoration-none" %>
          </h2>
      </div>
    <% end %>
  </div>
  <div>
    <p><%= link_to '+ Add a new list', new_list_path, class: 'btn btn-primary mt-3' %></p>
  </div>
</div>
