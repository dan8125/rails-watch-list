<div class="container my-4">
  <h1>The List</h1>
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <h2 class="card-title"><%= @list.name %></h2>
      <p><%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-primary mt-2' %></p>
      <p><%= link_to 'Back to the movie lists', lists_path, class: 'btn btn-secondary mt-2' %></p>
    </div>
  </div>

  <div class="mb-4">
    <% if @list.bookmarks.any? %>
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card mb-3">
          <div class="card-body">
            <h2>Bookmark</h2>
            <p class="mb-1"><strong>Movie:</strong> <%= bookmark.movie.title %></p>
            <p><%= bookmark.comment %></p>
            <%= link_to 'Delete bookmark', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Delete this bookmark?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No Bookmarks yet.</p>
    <% end %>
  </div>
</div>
