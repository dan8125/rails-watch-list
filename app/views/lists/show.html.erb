<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1562329265-95a6d7a83440?q=80&w=1070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1>Your personalized list</h1>
  </div>
</div>

<div class="container my-4">
  <h1>The List</h1>
  <div style="border: 1px solid rgba(0,0,0,0.2); border-radius: 10px; padding: 20px; margin-top: 10px;">
    <div class="justify-content-center align-items-center">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : image_path('https://ducunl0s4svtl.cloudfront.net/wp-content/uploads/2017/10/flat-clapperboard-icon_1063-38.jpg') %>);
      background-size: cover;
      background-position: center;
      height: 400px;
      ">
        <h2 class="card-title"><%= @list.name %></h2>
      </div>
    </div>
    <p><%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-primary mt-2' %></p>
  </div>

  <div class="container mb-4" style="border: 1px solid rgba(0,0,0,0.2); border-radius: 10px; padding: 20px; margin-top: 10px;">
    <% if @list.bookmarks.any? %>
      <div class="row">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="col-md-4 mb-3">
            <div class="card">
              <%= image_tag bookmark.movie.poster_url, class: "card-img-top", alt: "#{bookmark.movie.title} poster" %>
              <div class="card-body">
                <h2>Bookmark</h2>
                <p class="mb-1"><strong>Movie:</strong> <%= bookmark.movie.title %></p>
                <p><%= bookmark.comment %></p>
                <%= link_to 'Delete bookmark', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Delete this bookmark?' }, class: 'btn btn-danger' %>
              </div>
            </div>
          </div>
        <% end %>
       </div>
    <% else %>
      <p>No Bookmarks yet.</p>
    <% end %>
  </div>
</div>

<div class="text-center mt-4 mb-5">
  <%= link_to 'Back to the movie lists', lists_path, class: 'btn btn-secondary' %>
</div>
